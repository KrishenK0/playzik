            <!-- Heading -->
            <div class="mt-4 flex flex-row sm:w-3/4 mx-auto px-2 mb-4">
                <h1 class="text-md text-lg text-gray-100 flex-1">Recent Searches</h1>
                <a class="font-bold text-secondary justify-end">Clear all</a>
            </div>
            <!-- Content -->
            <div class="flex flex-col sm:w-3/4 mx-auto px-2 font-semibold">
                <div class="py-2 w-full flex flex-row items-center text-gray-400">
                    <span class="flex-1 text-sm">Just like you</span>
                    <i class="fa fa-times justify-end"></i>
                </div>
                <div class="py-2 w-full flex flex-row items-center text-gray-400">
